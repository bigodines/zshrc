# TM FTW
Pry.config.editor = "mate -wl1"

# My pry is polite
Pry.config.hooks.add_hook :after_session, :say_bye do
  puts "bye-bye"
end

# Prompt with ruby version
Pry.config.prompt = [
  proc { |obj, nest_level, _| "#{RUBY_VERSION} (#{obj}):#{nest_level} > " },
  proc { |obj, nest_level, _| "#{RUBY_VERSION} (#{obj}):#{nest_level} * " }
]
