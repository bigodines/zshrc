# TM FTW
Pry.config.editor = "mate -wl1"

# My pry is polite
Pry.config.hooks.add_hook :after_session, :say_bye do
  puts "bye-bye"
end

# Prompt with ruby version
Pry.config.prompt = [
  proc { |obj, nest_level, _| "#{RUBY_VERSION} (#{obj}):#{nest_level} > " },
  proc { |obj, nest_level, _| "#{RUBY_VERSION} (#{obj}):#{nest_level} * " }
]

def mate(*args)
  if Array === args.first && args.first.size == 2 && String === args.first.first && Integer === args.first.last
    file, line = args.first
    system "mate", file, "-l", line.to_s
  else
    puts "Whoops, mate() can't handle #{args.inspect} yet!"
  end
end
